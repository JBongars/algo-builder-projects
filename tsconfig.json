{
    "compilerOptions": {
        "target": "ES5",
        "lib": ["esnext", "dom"],
        "outDir": "./build",
        "typeRoots": ["node_modules/@types"],
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowJs": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "declaration": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./*"]
        }
    },
    "include": ["index.d.ts", "./**/*.ts", "./**/*.tsx"],
    "exclude": ["**/node_modules", "**/webpack", "./**/*.spec.ts", "./**/*.tsx"],
    "types": ["node"]
}
